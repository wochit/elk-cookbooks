{
	"template" : "social_assets*",
	"order" : 0,
	"settings" : {
		"number_of_shards" : 3,
		"number_of_replicas" : 1,
		"analysis": {
            "filter": {
                "wochit_shingle_filter": {
                    "type":             "shingle",
                    "min_shingle_size": 2, 
                    "max_shingle_size": 3, 
                    "output_unigrams":  false   
                },
				"english_stop": {
				  "type":       "stop",
				  "stopwords":  "_english_" 
				},
				"english_stemmer": {
				  "type":       "stemmer",
				  "language":   "english"
				},
				"english_possessive_stemmer": {
				  "type":       "stemmer",
				  "language":   "possessive_english"
				}
            },
            "analyzer": {
                "wochit_shingle_analyzer": {
                    "type":             "custom",
                    "tokenizer":        "standard",
                    "filter": [
                        "lowercase",
                        "wochit_shingle_filter" 
                    ]
                },
				"wochit_english_stemming_analyzer": {
					"tokenizer":  "standard",
				    "filter": [
						"asciifolding",
						"english_possessive_stemmer",
						"lowercase",
						"english_stop",
						"english_stemmer"
					]
					
				}
            }
        }
	},
	"aliases" : {
		"test_assets_social" : {}
	},
	"mappings" : {
		"TWITTER": {
			"_all" : {"enabled" : false},
			"properties":{
				"socialUserProfileImageUrl":{
					"type": "string",
					"index" : "not_analyzed"
				},
				"socialUserScreenName":{
					"type": "string",
					"fields":
					{
						"raw": 
						{
							"type" : "string",
							"index" : "not_analyzed"
						}
					}
				},				
				"socialUserName":{
					"type": "string",
					"fields":
					{
						"raw": 
						{
							"type" : "string",
							"index" : "not_analyzed"
						}
					}
				},
				"caption":{
					"type": "string",
					"copy_to" : "text",
					"fields": {
						"shingles": {
							"type":     "string",
							"analyzer": "wochit_shingle_analyzer"
						},
						"stems": {
							"type": "string",
							"analyzer": "wochit_english_stemming_analyzer"
						}
					}
				},
				"providerHiResAssetUrl":{
					"type": "string",
					"index" : "not_analyzed"
				},
				"providerLowResAssetUrl":{
					"type": "string",
					"index" : "not_analyzed"
				},
				"uploadStatus":{
					"type": "string",
					"index" : "not_analyzed"
				}
			}
		}
	}
}
